<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imgDetailAnimal"
        android:layout_width="135dp"
        android:layout_height="150dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="35dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/txtDetailName"
        android:layout_width="201dp"
        android:layout_height="30dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/noto_serif"
        android:text="Name"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/imgDetailAnimal"
        app:layout_constraintTop_toTopOf="@+id/imgDetailAnimal" />

    <TextView
        android:id="@+id/txtDetailBreed"
        android:layout_width="201dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/roboto_mono"
        android:text="Breed"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="@+id/txtDetailName"
        app:layout_constraintTop_toBottomOf="@+id/txtDetailName" />

    <TextView
        android:id="@+id/txtDetailKind"
        android:layout_width="201dp"
        android:layout_height="30dp"
        android:layout_marginTop="8dp"
        android:text="Kind"
        android:textSize="15sp"
        android:textColor="@color/blue_light"
        app:layout_constraintStart_toStartOf="@+id/txtDetailBreed"
        app:layout_constraintTop_toBottomOf="@+id/txtDetailBreed" />

    <TextView
        android:id="@+id/txtDetailAge"
        android:layout_width="201dp"
        android:layout_height="30dp"
        android:layout_marginTop="8dp"
        android:text="Age"
        android:textSize="15sp"
        android:textColor="@color/blue_light"
        app:layout_constraintStart_toStartOf="@+id/txtDetailKind"
        app:layout_constraintTop_toBottomOf="@+id/txtDetailKind" />

    <TextView
        android:id="@+id/txtDescriptionAnimal"
        android:layout_width="300dp"
        android:layout_height="416dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="5dp"
        android:fontFamily="@font/cairo_medium"
        android:text="Description"
        android:textColor="@color/blue"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/imgDetailAnimal"
        app:layout_constraintTop_toBottomOf="@+id/txtDetailAge" />

</androidx.constraintlayout.widget.ConstraintLayout>